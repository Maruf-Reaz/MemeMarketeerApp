@model MemeMarketeerApp.Models.Campaign
@{
    ViewData["Title"] = "Create Campaign";
}
@section Css {
    <link asp-append-version="true" type="text/css" rel="stylesheet" href="~/vendor/select2/select2.min.css" />
}
<div class="container-fluid mt-4">
    <div class="card mb-8 ">
        <div class="card-header p-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0 skewed skewed-yellow text-dark d-inline-block text-uppercase ls-1">Create Campaign</h3>
                </div>

            </div>
        </div>
        <div class="card-body p-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <input type="hidden" asp-for="FromHome" value="@ViewBag.FromHome" class="form-control" />
                    <div class="col-md-6">
                        <div class="form-group">

                            <label class="form-control-label text-dark ls-1 text-uppercase">Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Client</label>
                            <select asp-for="ClientId" class="form-control" data-toggle="select" asp-items="ViewBag.ClientId"></select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">

                            <label class="form-control-label text-dark ls-1 text-uppercase">Total Budget</label>
                            <input asp-for="TotalBudget" class="form-control" />
                            <span asp-validation-for="TotalBudget" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">

                            <label class="form-control-label text-dark ls-1 text-uppercase">Target Impression</label>
                            <input asp-for="TargetImpression" class="form-control" />
                            <span asp-validation-for="TargetImpression" class="text-danger"></span>
                        </div>

                    </div>




                    <div class="col-lg-12">
                        <div class="form-group mb-0">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script asp-append-version="true" type="text/javascript" src="~/vendor/select2/select2.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}